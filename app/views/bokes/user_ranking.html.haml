                    = image_tag @user_2.image, class: "user-icon-top-bar"
                  = link_to @user_2.name,""
                %p
                  %i.fa.fa-star
                  合計
                  = @user_2_sum
                  個
          = render :partial => "bokes/boke-horizon", :locals => { bokes: @bokes_user_2 }
          .user_ranking_title.user_ranking_top3
            %ul.inline-list
              %li
                = image_tag "week_3.png",style:"width:96px; height:96px;"
              %li.userranking_list-top3
                %p
                  %b
                    3位
                %p
                  - if @user_3.image.file.nil?
                    = image_tag "//d3pb2x7032n52.cloudfront.net/static/images/user_icon.gif", class: "user-icon-top-bar"
                  - else
                    = image_tag @user_3.image, class: "user-icon-top-bar"
                  = link_to @user_3.name,""
                %p
                  %i.fa.fa-star
                  合計
                  = @user_3_sum
