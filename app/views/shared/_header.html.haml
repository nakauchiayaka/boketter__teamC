.fixed
  #top-bar.top-bar
    #top-navi
      %ul.title-area
        %li.name
          =link_to root_path do
            = image_tag "logo.png",class: "logo_bokete"
      .top-bar-section
        %ul.left
          %li.left__style
            = link_to "ボケ",""
          %li.left__style
            = link_to "お題",odais_path
          %li.left__style
            = link_to "職人",""
        %ul.right
          - if user_signed_in?
            %li.right__style
              = link_to "/user/#{current_user.id}" do
                = image_tag "wood_pattern.png",class: "user-icon-top-bar"
                = current_user.name
            %li.right__style
              = link_to "マイページ", my_path
          - else
            %li
              = link_to "新規登録", new_user_registration_path
            %li
              = link_to "ログイン", new_user_session_path
          %li.right__style
            = link_to "ヘルプ",""
