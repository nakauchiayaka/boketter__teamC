.fixed
  #top-bar.top-bar
    #top-navi
      %ul.title-area
        %li.name
          =link_to root_path do
            = image_tag "logo.png",class: "logo_bokete"
      .top-bar-section
        %ul.left
          %li.left__style
            = link_to "ボケ",bokes_path
          %li.left__style
            = link_to "お題",odais_path
          %li.left__style
            = link_to "職人",user_ranking_bokes_path
        %ul.right
          - if user_signed_in?
            %li.right__style
              = link_to user_path(id:current_user.id) do
                - if current_user.image.file.nil?
                  = image_tag "//d3pb2x7032n52.cloudfront.net/static/images/user_icon.gif", class: "user-icon-top-bar"
                - else
                  = image_tag current_user.image, class: "user-icon-top-bar"
                = current_user.name
            %li.right__style
              = link_to "マイページ", my_path
          - else
            %li
              = link_to "新規登録", new_user_registration_path
            %li
              = link_to "ログイン", new_user_session_path
          %li.right__style
            = link_to "ヘルプ",""
